{
  "name": "miraxshare-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "dev:electron": "concurrently -k \"npm:dev:web\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "build:web": "vite build",
    "build:native": "node scripts/build-native.cjs",
    "test:system-audio": "node scripts/test-system-audio.cjs",
    "build:electron": "npm run build:native && npm run build:web && electron-builder --win nsis",
    "build:electron:release": "npm run build:electron && node scripts/copy-electron-artifacts.cjs",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "node-addon-api": "^8.2.2",
    "node-gyp": "^11.2.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.miraxshare.desktop",
    "productName": "MiraxShare",
    "artifactName": "MiraxShare-Setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asarUnpack": [
      "electron/native/*.node"
    ],
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
